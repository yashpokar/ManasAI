{
  "name": "manas-ai",
  "version": "0.0.1",
  "description": "The Manas AI",
  "scripts": {
    "dev": "concurrently \"pnpm run ui:dev\" \"pnpm run api:dev\"",
    "start": "concurrently \"nx run ui:preview --port 6288\" \"nx run api:dev\"",
    "ui:dev": "nx run ui:dev",
    "ui:build": "nx run ui:build",
    "ui:lint": "nx run ui:lint",
    "ui:test": "nx run ui:test",
    "api:dev": "nx run api:dev",
    "api:build": "nx run api:build",
    "api:lint": "nx run api:lint",
    "api:test": "nx run api:test",
    "lint": "nx run-many --target=lint --all",
    "test": "nx run-many --target=test --all",
    "build": "nx run @manasai/common:build && nx run ui:build && nx run api:build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ManasAI",
    "OpenDevin",
    "DevinAI",
    "Software Engineer",
    "AGI",
    "LLM"
  ],
  "author": "Yash Patel <hello@yashpokar.com>",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nx": "^18.2.1",
    "prettier": "3.2.5"
  }
}
